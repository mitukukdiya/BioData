<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_biodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BioData"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_biodata"
        android:hint="Enter Name"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edt_fathername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_name"
        android:hint="Enter Father Name"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edt_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_fathername"
        android:hint="Enter Surname"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edt_qc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_surname"
        android:hint="Enter Qualification"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edt_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_qc"
        android:hint="Enter Mobile Number"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_mobile"
        android:layout_centerHorizontal="true"
        android:text="==============GENDER=============="
        android:textColor="@color/purple_200" />

    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_gender">

        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rb_male"
            android:text="female"
            android:textColor="@color/black" />
    </RadioGroup>

    <TextView
        android:id="@+id/txt_hobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_gender"
        android:layout_centerHorizontal="true"
        android:text="===============Hobby==============="
        android:textColor="@color/purple_200" />

    <CheckBox
        android:id="@+id/cb_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_hobby"
        android:text="Reading"
        android:textColor="@color/black" />

    <CheckBox
        android:id="@+id/cb_swiming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_reading"
        android:text="Swiming"
        android:textColor="@color/black" />

    <CheckBox
        android:id="@+id/cb_traveling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_swiming"
        android:text="Travelling"
        android:textColor="@color/black" />

    <SeekBar
        android:id="@+id/sb_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_traveling" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_age"
        android:layout_marginTop="10dp"
        android:layout_below="@id/sb_age"
        android:text="0"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_age"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textColor="@color/purple_200" />
</RelativeLayout>
</ScrollView>

</RelativeLayout>